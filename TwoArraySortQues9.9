	void sort(int c[])
	{
		int unSortInd,tmp=0;
		for (unSortInd=c.length-1;unSortInd>0;unSortInd--) {
			for (i=0; i<unSortInd;i++) {
				if(c[i]>c[i+1])
				{
					tmp=c[i];
					c[i]=c[i+1];
					c[i+1]=tmp;
